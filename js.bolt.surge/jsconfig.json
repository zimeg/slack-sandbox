{
    "compilerOptions": {
        "module": "es2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "checkJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "#imports": ["./.nitro/types/nitro-imports.d.ts"]
        },
        "types": ["nitropack"]
    },
    "include": [
        "server/**/*",
        ".nitro/types/**/*"
    ],
    "exclude": ["node_modules"],
    "jsdoc": {
        "out": "support/jsdoc",
        "access": "public"
    }
}
